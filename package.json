{
  "name": "zawali",
  "author": "Skander Fourati",
  "description": "An app for us brokies",
  "build": {
    "appId": "com.skander.zawali",
    "productName": "Zawali",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "icon": "public/favicon/web-app-manifest-512x512.png"
    },
    "dmg": {
      "title": "Zawali Finance Installer",
      "backgroundColor": "#1a1a1a",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "skander-fourati",
      "repo": "zawali",
      "private": false
    }
  }
}